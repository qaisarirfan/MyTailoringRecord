{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      // Example path alias
      "@app/*": ["app/*"]
    }
  },
  "include": ["app.json", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
